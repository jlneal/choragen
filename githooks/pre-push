#!/bin/bash
#
# Pre-push hook
# Runs build and tests before allowing push
#

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

echo -e "${YELLOW}[pre-push] Running pre-push checks...${NC}"

# Allow skipping for emergencies
if [ "${SKIP_PRE_PUSH:-0}" = "1" ]; then
  echo -e "${YELLOW}[pre-push] SKIP_PRE_PUSH=1 — skipping all checks${NC}"
  exit 0
fi

# Run build
echo -e "[pre-push] Running build..."
if ! pnpm build; then
  echo ""
  echo -e "${RED}❌ Build failed${NC}"
  echo ""
  echo "   Fix build errors before pushing."
  echo "   To skip (not recommended): SKIP_PRE_PUSH=1 git push"
  echo ""
  exit 1
fi
echo -e "${GREEN}[pre-push] Build passed${NC}"

# Run tests
echo -e "[pre-push] Running tests..."
if ! pnpm test; then
  echo ""
  echo -e "${RED}❌ Tests failed${NC}"
  echo ""
  echo "   Fix failing tests before pushing."
  echo "   To skip (not recommended): SKIP_PRE_PUSH=1 git push"
  echo ""
  exit 1
fi
echo -e "${GREEN}[pre-push] Tests passed${NC}"

echo -e "${GREEN}[pre-push] All checks passed${NC}"
exit 0
